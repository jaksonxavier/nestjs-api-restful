{
  "moduleFileExtensions": [
    "js",
    "json",
    "ts"
  ],
  "rootDir": "../",
  "testRegex": ".e2e-spec.ts$",
  "transform": {
    "^.+\\.(t|j)s$": "ts-jest"
  },
  "collectCoverageFrom": [
    "**/*.(t|j)s"
  ],
  "coverageDirectory": "./coverage-e2e",
  "testEnvironment": "node",
  "moduleNameMapper": {
    "^@core/(.*)$": "<rootDir>/src/core/$1",
    "^@domain/(.*)$": "<rootDir>/src/domain/$1",
    "^@test/(.*)$": "<rootDir>/test/$1"
  },
  "setupFilesAfterEnv": [
    "<rootDir>/test/setup-e2e.ts"
  ]
}